<formatters>
	
	<record type="body">
		<literal>|</literal>
		<format
			name="name"
			align="left"
			minLength="20"
			maxLength="20"
			trim="right"
		/>
		<literal>|</literal>
		<format
			name="age"
			dataType="decimal"
			format="0.00"
			align="right"
			minLength="6"
			maxLength="6"
		/>
		<literal>|</literal>
		<format
			name="salary"
			dataType="decimal"
			format="$#,##0.00"
			align="right"
			minLength="15"
			maxLength="15"
		/>
		<literal>|</literal>
		<format
			name="hireDate"
			dataType="date"
			format="yyyy-MM-dd hh:mm:ss"
			align="right"
			minLength="20"
			maxLength="20"
		/>
		<literal>|</literal>
		<format
			name="salary"
			dataType="decimal"
			format="$#,##0.00"
			align="right"
			minLength="15"
			maxLength="15"
			script="value * 0.8"
		/>
		<literal>|</literal>
		<format
			name="apr"
			dataType="decimal"
			format="0.0"
			align="right"
			minLength="15"
			maxLength="15"
			script="value * 100.0"
		/>
		<literal>|</literal>
		<format
			name="nerd"
			align="right"
			minLength="1"
			maxLength="1"
			script="(value) ? 'Y' : 'N'"
		/>
		<literal>|</literal>
		<format
			name="nerd"
			align="left"
			minLength="4"
			maxLength="4"
			dataType="boolean"
			format="Yup:Nope"
		/>
		<literal>|</literal>
		<format
			name="apr"
			align="left"
			minLength="15"
			maxLength="15"
		>
			<script><![CDATA[
				// Test beanshell script using compiled method with state.
				long time = System.currentTimeMillis() / (1000 * 60 * 60 * 24);
				System.out.println("I should only appear once.");
				format(value, formatter) {
					return value + time;
				}
			]]></script>
		</format>
		<literal>|</literal>
	</record>
	
</formatters>