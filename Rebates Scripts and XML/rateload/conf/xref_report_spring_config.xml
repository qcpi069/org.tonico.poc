<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
	This is the spring configuration file for discount client split conversion process
	-->																																				 
																																					 <!--  - Application context definition for "springapp" DispatcherServlet.  -->
<beans>    
	<!--  transaction manager -->
	
	<!--  the driver class -->
	<bean id="main" class="com.caremark.rebates.registration.batch.main.XREFReportMain">	
		<property name="service">
    			<ref bean="service"/>
    		</property>	
			
		<property name="xrefReportEmailTemplate">
    			<value>XREFReportEmailTemplate.txt</value>
    		</property>	
		<property name="mailFrom">
    			<value>XREFReport@caremark.com</value>
    		</property>	
		<!--<property name="mailTo">
    			<value>shirley.han@caremark.com</value>
    		</property>	
			-->
		<property name="mailTo">
    			<value>gdxitd@caremark.com</value>
    		</property>	
    </bean>
	<bean id="service" class="com.caremark.rebates.registration.batch.service.XREFReportService">	
		<property name="dataSource">
            <ref bean="rbateRegDataSource"/>
        </property>	
		<property name="transactionTemplate">
            <ref bean="transactionTemplate"/>
        </property> 
		
		<property name="archivePrefix">
    			<value>XREF_REPORT</value>
    		</property>			
	   <property name="uploadDir">
    			<value>data/upload</value>
    		</property>	
		<property name="dataFileName">
			<value>ruc_xref_report.csv</value>
    		</property>	
		<property name="archiveDir">
    			<value>data/completed</value>
    		</property>	
		<property name="errorDir">
    			<value>data/errors</value>
    		</property>			
		<property name="xrefReportDAO">
    			<ref bean="xrefReportDAO"/>
    		</property>	
		<property name="hostName">
    			<value>azshisp00</value>
    		</property>	
		<property name="userName">
    			<value>ftpnt</value>
    		</property>	
		<property name="password">
    			<value>simple2</value>
    		</property>	
		<property name="workingDirectory">
    			<value>rebates_integration/clientcrossreferencesalesreports</value>
    		</property>			
		<property name="fileType">
    			<value>ASCII</value>
    	</property>	
	
    </bean>
	
</beans>
