
<!-- REFRESH TDRUG  -->

<sqml>
	<property name="TIMEOUT" value="0"/>
	<datasources resource="datasource.xml"/>
	<properties resource="datamart.properties"/>

    <command type="java"><![CDATA[
        mailto=script.getProperty("mailto");
        rbt_schema=script.getProperty("rbt_schema");        
	]]></command>
		       
	<command type="try">
		<try>
            <!-- *************** TDRUG ********************* -->
                                                <!-- delete from UDB -->
                        <command type="run" datasource="datamart">
                                <![CDATA[
                                        DELETE FROM ${dmt_schema}.tdrug
                                ]]>
                        </command>

			<!-- Copy TDRUG info from EDW to UDB. -->
			<command type="copy" batch="500">
				<source type="sql" datasource="edwdb"><![CDATA[

				
				select DISTINCT				
				    SUBSTR(a.ndc_code,1,11)				
				   ,NVL(SUBSTR(a.brand_name,1,30),'UNKNOWN NDC')				
				   ,NVL(a.lbl_name,' ')				
				from dwcorp.v_drug_denorm a				
				where a.eff_date=( select max(b.eff_date)				
				                     from dwcorp.v_drug_denorm b				
				                    where b.ndc_code = a.ndc_code				
				                      and b.obslt_flag is null)				
				and (a.drug_fdb_src_flag = 1 or     				
				     a.drug_mddb_src_flag = 1 or   				
				     a.drug_recap_src_flag = 1 or 				
				     a.drug_rxclaim_src_flag = 1 or				
            			     a.DRUG_QL_SRC_FLAG = 1)

				]]></source>
				<target type= "queue" threads="6" > 
				<target
					type             = "sql"
					datasource       = "datamart"
					transaction      = "true"
					batch            = "500"
					reportInterval   = "500"
					queryTimeout     = "${TIMEOUT}"
				><![CDATA[
					INSERT INTO ${dmt_schema}.tdrug
					 (NDC_NB,
					  BRND_NME,
					  LABL_NME	
					  ) 
					VALUES ( ?, ?, ? )
				]]></target>
				</target>
			</command>  
				 
		</try>
		<catch>
			<!-- Send an email on error -->
			<command
				type="mail"
				mailTo="${mailto}"
				mailFrom="helen.tang@caremark.com"
				subject="[ERROR] REFESH - TDRUG "
				contentType="text/html"
				throwsException="false"
			><![CDATA[
				<html>
				<head>
				<title>[ERROR] REFRESH - TDRUG</title>
				</head>
				<body>
			
				<h3><u>[ERROR] REFRESH - TDRUG </u></h3>
			
				<table cellpadding="2">
					<tr><td><b>Host:</b></td><td>${localhost}<td></tr>
					<tr><td><b>Started:</b></td><td>${startTime}<td></tr>
					<tr><td><b>Script:</b></td><td>${scriptName}<td></tr>
					#if (${system.getProperty('logfile')})
						<tr>
							<td><b>Log File:</b></td>
							<td>
								${system.getProperty('logfile')}
							<td>
						</tr>
					#end
				</table>

				<br>			
				<br>
				
				#if (${script.getLastStatement()})
					<h3><u>Last Statement</u></h3>
					<font style="color: blue; font-size: small">	
					${script.getLastStatement()}
					</font>
				
					<br>
					<br>
				#end
			
				<h3><u>Stack Trace</u></h3>		
				<pre style="color: red; font-size: small;">${stackTrace}</pre>
				</body>
				</html>
			]]></command>
		</catch>
	</command>
</sqml>
